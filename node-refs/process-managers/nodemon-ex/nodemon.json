{
	"restartable": "rs",
	"ignore": [
		".git",
		"node_modules/**/node_modules"
	],
	"verbose": true,
	"execMap": {
		"js": "node --harmony"
	},
	"events": {
		"restart": "echo nodemon acts!"
	},
	"watch": [
		"src/",
		"public/"
	],
	"env": {
		"NODE_ENV": "development"
	},
	"ext": "js,json"
}